<div class="h-100 back-gray">

<%= render "devise/shared/header", name: 'SINGUP', path: root_path %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex-center column w-100 h-40 m-small">
  
  <div class="field w-100">
    <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'w-100' %>
  </div>

  <div class="form-line w-30 h-5 back-gray"></div>
  
  <div class="field w-100">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'w-100' %>
  </div>

  <div class="form-line w-30 h-5 back-gray"></div>

  <div class="field w-100">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (6 characters minimum)', class: 'w-100' %>
  </div>

  <div class="form-line w-30 h-5 back-gray"></div>

  <div class="field w-100">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation', class: 'w-100' %>
  </div>

  <div class="actions w-90 m-small">
    <%= f.submit "Sign up", class: 'blue-btn' %>
  </div>
  </div>

<% end %>
</div>
